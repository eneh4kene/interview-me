# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jobplace
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobplace
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# JWT (HS256)
JWT_SECRET=replace-with-strong-random-string
# Optional: dedicated refresh secret (falls back to JWT_SECRET if unset)
JWT_REFRESH_SECRET=

# Job Aggregators
# Adzuna
ADZUNA_APP_ID=
ADZUNA_APP_KEY=
ADZUNA_BASE_URL=https://api.adzuna.com/v1/api

# Jooble
JOOBLE_API_KEY=
JOOBLE_BASE_URL=https://jooble.org/api

# Rate Limits (requests per minute)
ADZUNA_RATE_LIMIT_PER_MINUTE=25
JOOBLE_RATE_LIMIT_PER_MINUTE=60

# Job Cache Settings
JOB_CACHE_TTL_SECONDS=1800 # 30 minutes
JOB_STORAGE_TTL_DAYS=30 # Delete jobs older than 30 days

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
AUTH_RATE_LIMIT_DISABLED=false
RATE_LIMIT_DISABLED=false

# Security
ENABLE_AUDIT_LOGGING=true
ENABLE_INPUT_SANITIZATION=true
ENABLE_SECURITY_HEADERS=true

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-strong-random-string 