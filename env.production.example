# Production Environment Configuration
# This file contains production environment variables
# SAFE: Only adds new environment file, doesn't modify existing functionality

# Application
NODE_ENV=production
PORT=3001
API_PORT=3001
WEB_PORT=3000

# Database
DATABASE_URL=postgresql://username:password@hostname:5432/interviewsfirst
DB_HOST=localhost
DB_PORT=5432
DB_NAME=interviewsfirst
DB_USER=username
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://interviewsfirst.com,https://www.interviewsfirst.com
NEXT_PUBLIC_API_URL=https://api.interviewsfirst.com
NEXT_PUBLIC_APP_URL=https://interviewsfirst.com

# Rate Limiting
RATE_LIMIT_DISABLED=false
AUTH_RATE_LIMIT_DISABLED=false

# Monitoring
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
ENABLE_INPUT_SANITIZATION=true
ENABLE_SECURITY_HEADERS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/resumes

# Email (if implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs
ADZUNA_API_ID=your-adzuna-api-id
ADZUNA_API_KEY=your-adzuna-api-key
JOOBLE_API_KEY=your-jooble-api-key

# Backup
BACKUP_SCHEDULE=0 2 * * *
AWS_S3_BUCKET=interviewsfirst-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Slack Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
